    def new(self):
        print('\nВыберете способность для изучения:')
        number = 0
        if person.name_list[0] is False:
            number += 1
            print('{0} - Каменная кожа. 1ур'.format(number))
        if person.name_list[0]:
            number += 1
            print('{0} - Каменная кожа. 2ур'.format(number))
        if person.name_list[1]:
            number += 1
            print('{0} - Каменная кожа. 3ур'.format(number))
        if person.name_list[3] is False:
            number += 1
            print('{0} - Земляные шипы. 1ур'.format(number))
        if person.name_list[3]:
            number += 1
            print('{0} - Земляные шипы. 2ур'.format(number))
        if person.name_list[4]:
            number += 1
            print('{0} - Земляные шипы. 3ур'.format(number))
        choice = input()
        match choice:
            case '1':
                person.name_list[0] = 'Каменная кожа. 1ур'
                person.skills.append('stone_skin')
            case '2':
                person.name_list[3] = 'Земляные шипы. 1ур'
                person.skills.append('earth_spike')

    def mana_check(self, id_skill):
        match id_skill:
            case 0:
                self.cost = 20
                if person.mp >= self.cost:
                    return True
                else:
                    return False
            case 3:
                self.cost = 15
                if person.mp >= self.cost:
                    return True
                else:
                    return False

    def StoneSkin(self):
        if self.mana_check(0):
            person.mp -= self.cost
            person.armor += 4
            print('Вы покрыли себя камнем и затратили на это {0} маны'.format(self.cost))
            # a = self.timer_list.get('stone_skin_1')
            # b = self.timer_list.get('stone_skin_2')
            # a.update(b)
            return self.time_list[0]
        else:
            print('Не получилось прочесть заклинание')
            return False

    def EarthSpike(self, enemy):
        if self.mana_check(3):
            person.mp -= self.cost
            # old_hp = enemy.hp
            dmg = enemy.take_mag_attack(25)
            # dmg = old_hp - enemy.hp
            print('Земляные пики разверзлись под противником и нанесли ему {1} урона. '
                  'Вы затратили на это {0} маны'.format(self.cost, dmg))
            return self.time_list[3]
        else:
            print('Не получилось прочесть заклинание')
            return False


    def UnStoneSkin(self, user):    # Может реализовать систему эффектов? При прохождении таймера запускается скрипт поиска
                                # эффекта на игроке, который при совпадении  имён способностей запустит нужный скрипт
                                # развеивания. Либо оставить как есть
        user.armor -= 4
        #print("Каменная кожа утратила свою силу")

def skill_id(id):
    name = 'YOU ARE ABOBA'
    match id:
        case 0:
            name = 'Каменная кожа'
        case 3:
            name = 'Земляные шипы'
    return name

def check(timer):
    for i in timer:
        if i != False:
            i[0] -= 1
            i[1] -= 1
            if i[0] > 0:
                print('Оставшаяся длительность {0}: {1}'.format(skill_id(timer.index(i)), i[0]))
            elif i[0] == 0:
                print('Умение {0} перестало действовать'.format(skill_id(timer.index(i))))
                skill.UnStoneSkin(person)
            elif i[1] == 0:
                print('Умение {0} снова доступно'.format(skill_id(timer.index(i))))
                index = timer.index(i)
                timer[index] = False
        continue

def skill_number():
    for item in person.name_list:
        if item:  # Скилл изучен
            if person.duration[person.name_list.index(item)] is False:  # Его метод не применялся
                if skill.mana_check(person.name_list.index(item)):
                    match person.name_list.index(item):
                        case 0 | 1 | 2:  # stone_skin
                            print('                              1    {0}'.format(item))
                        case 3 | 4 | 5:  # earth_spike
                            print('                              2    {0}'.format(item))
                else:
                    match person.name_list.index(item):
                        case 0 | 1 | 2:  # stone_skin
                            print('Недостаточно маны!            1    {0}'.format(item))
                        case 3 | 4 | 5:  # earth_spike
                            print('Недостаточно маны!            2    {0}'.format(item))


def select_skill(enemy):
    skill_number()
    choose = input()
    match choose:
        case '1':
            person_move = skill.StoneSkin()
            person.duration[0] = person_move
        case '2':
            person_move = skill.EarthSpike(enemy)
            person.duration[3] = person_move
        case _:
            pass

def battle(enemy):
    count = 1
    person.duration = [False, False, False, False, False, False]
    while enemy.hp > 0 and person.hp > 0:
        skill.time_list = \
            [
                [3, 5], [4, 5], [5, 5], [0, 1], [0, 1], [0, 1]
            ]
        check(person.duration)
        person.battle_info()
        enemy.battle_info()
        print('\nХод {0} как вы поступите?'.format(count))
        print('                              1    Атаковать')
        print('                              2    Использовать способность')
        choose = input()
        match choose:
            case '1':
                person_move = enemy.take_attack(person.dmg)
                print(enemy.name, 'получил', person_move, 'урона')
            case '2':
                select_skill(enemy)
            case _:
                continue
        b = person.take_attack(enemy.dmg)
        print('Вы получили', b, 'урона')
        count += 1
        if len(person.duration) > 0:  # Для откладки duration
            print(person.duration)
            print(skill.time_list)
    if enemy.hp < 0:
        print('\nВы победили!\n')
    else:
        print('\nВы проиграли, игра окончена...')
        time.sleep(5)
        exit()

